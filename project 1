import java.util.*;
import java.math.BigInteger;
import java.security.MessageDigest;
class atm
{
String getSHA(String a)
{
try{
    
MessageDigest md=MessageDigest.getInstance("SHA-256");
byte[] messageDigest=md.digest(a.getBytes());
BigInteger no=new BigInteger(1,messageDigest);
 String hashtext=no.toString(16);
while(hashtext.length()<32)
{
hashtext="0"+ hashtext;
}
return hashtext;
}
catch (Exception e)
{ 
    System.out.println("Exception thrown"+"for incorrect algorithm"+e);
    return null;
}
}

public  void main()
{
int n,num=100000,d;
String name;
Scanner sc=new Scanner(System.in);
System.out.println("Enter your name");
name=sc.nextLine();
System.out.println("Welcome");
System.out.println("Enter pin code");

String str=sc.nextLine();
String s1=getSHA(str);
System.out.println(s1);
System.out.println("Enter choice 1 for withdrawal,2 for pin change,3 for credit,4 for checking bank balance");
int choice=sc.nextInt();
switch (choice)
{
case 1:
System.out.println("Enter amount to be withdrawn");
d=sc.nextInt();
num=num-d;
System.out.println("Your available balance"+num);
break;

case 2:
System.out.println("Enter new pin");
n=sc.nextInt();
break;

case 3:
System.out.println("Enter amount tot be credited");
d=sc.nextInt();
num=num+d;

System.out.println("Your new balance"+num);
break;

case 4:
System.out.println("Your name"+name);
System.out.println("Your balance"+num);
break;


}System.out.println("Thank You");
}}
