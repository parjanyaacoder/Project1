import java.util.*;
class atm
{
public static void main()
{
int n,num=100000,d;
String name;
Scanner sc=new Scanner(System.in);
System.out.println("Enter your name");
name=sc.nextLine();
System.out.println("Welcome");
System.out.println("Enter pin code");
n=sc.nextInt();
System.out.println("Enter choice 1 for withdrawal,2 for pin change,3 for credit,4 for checking bank balance");
int choice=sc.nextInt();
switch (choice)
{
case 1:
System.out.println("Enter amount to be withdrawn");
d=sc.nextInt();
num=num-d;
System.out.println("Your available balance"+num);
break;

case 2:
System.out.println("Enter new pin");
n=sc.nextInt();
break;

case 3:
System.out.println("Enter amount tot be credited");
d=sc.nextInt();
num=num+d;

System.out.println("Your new balance"+num);
break;

case 4:
System.out.println("Your name"+name);
System.out.println("Your balance"+num);
break;


}System.out.println("Thank You");
}}
